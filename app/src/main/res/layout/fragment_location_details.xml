<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Variable for Location data -->
        <variable
            name="location"
            type="com.example.testrickmorty.Location" />

        <!-- Variable for the Adapter used in RecyclerView -->
        <variable
            name="characterAdapter"
            type="com.example.testrickmorty.CharacterAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- TextViews for Location details -->
        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{location.name}"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Location Name" />

        <TextView
            android:id="@+id/locationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{location.type}"
            android:layout_below="@id/locationName"
            android:textSize="16sp"
            tools:text="Location Type" />

        <TextView
            android:id="@+id/locationDimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{location.dimension}"
            android:layout_below="@id/locationType"
            android:textSize="16sp"
            tools:text="Location Dimension" />

        <!-- RecyclerView for characters -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/characterRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/locationDimension"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:adapter="@{characterAdapter}"
            tools:listitem="@layout/item_character" />

    </RelativeLayout>
</layout>
